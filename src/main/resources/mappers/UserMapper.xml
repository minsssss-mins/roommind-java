<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.roomgenius.furniture_recommendation.mapper.UserMapper">

    <!-- ResultMap: DB 컬럼 -> VO 필드 매핑 -->
    <resultMap id="UserResultMap" type="com.roomgenius.furniture_recommendation.entity.UserVO">
        <id property="userId" column="user_id"/>
        <result property="userName" column="user_name"/>
        <result property="phone" column="phone"/>
        <result property="address" column="address"/>
        <result property="email" column="email"/>
        <result property="password" column="password"/>
        <result property="socialType" column="social_type"/>
        <result property="socialId" column="social_id"/>
        <result property="role" column="role"/>
        <result property="createdDate" column="created_date"/>
        <result property="updatedDate" column="updated_date"/>
    </resultMap>

    <!-- 회원가입 -->
    <insert id="insertUser"
            parameterType="com.roomgenius.furniture_recommendation.entity.UserVO"
            useGeneratedKeys="true"
            keyProperty="userId">
        INSERT INTO User (
        user_name,
        phone,
        address,
        email,
        password,
        social_type,
        social_id,
        role
        )
        VALUES (
        #{userName},
        #{phone},
        #{address},
        #{email},
        #{password},
        #{socialType},
        #{socialId},
        COALESCE(#{role}, 'user')
        )
    </insert>

    <!-- 이메일 중복 체크 -->
    <select id="countByEmail" parameterType="string" resultType="int">
        SELECT COUNT(*)
        FROM User
        WHERE email = #{email}
    </select>

    <!-- ID로 조회 -->
    <select id="findById" parameterType="int" resultMap="UserResultMap">
        SELECT *
        FROM User
        WHERE user_id = #{userId}
    </select>

    <!-- 이메일로 조회 -->
    <select id="findByEmail" parameterType="string" resultMap="UserResultMap">
        SELECT *
        FROM User
        WHERE email = #{email}
    </select>

    <!-- 소셜 로그인 조회 -->
    <select id="findBySocial" parameterType="map" resultMap="UserResultMap">
        SELECT *
        FROM User
        WHERE social_type = #{socialType}
        AND social_id = #{socialId}
    </select>

    <update id="updateUser" parameterType="com.roomgenius.furniture_recommendation.entity.UserVO">
        UPDATE User
        SET user_name = #{userName},
        phone = #{phone},
        WHERE email = #{email}
    </update>

    <update id="updatePassword" parameterType="com.roomgenius.furniture_recommendation.entity.UserVO">
        UPDATE User
        SET password = #{password}
        WHERE email = #{email}
    </update>

    <!-- 이메일 → user_id 조회 (JWT 필터에서 필수) -->
    <select id="findIdByEmail" parameterType="string" resultType="int">
        SELECT user_id
        FROM User
        WHERE email = #{email}
    </select>
    <select id="findUserIdByEmail" parameterType="string" resultType="int">
        SELECT user_id FROM User WHERE email = #{email}
    </select>

</mapper>
