<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.roomgenius.furniture_recommendation.mapper.ReviewMapper">

    <!-- 리뷰 등록 -->
    <insert id="insert" parameterType="com.roomgenius.furniture_recommendation.entity.ReviewVO">
        INSERT INTO Review (user_id, product_id, rating, content)
        VALUES (#{userId}, #{productId}, #{rating}, #{content})
    </insert>

    <!-- 리뷰 수정 -->
    <update id="update" parameterType="com.roomgenius.furniture_recommendation.entity.ReviewVO">
        UPDATE Review
        SET
        rating = #{rating},
        content = #{content},
        updated_date = CURRENT_TIMESTAMP
        WHERE review_id = #{reviewId}
    </update>

    <!-- 리뷰 삭제 -->
    <delete id="delete" parameterType="int">
        DELETE FROM Review
        WHERE review_id = #{reviewId}
    </delete>

    <!-- 유저 + 상품별 리뷰 조회 (중복 작성 방지용) -->
    <select id="findByUserAndProduct" resultType="com.roomgenius.furniture_recommendation.entity.ReviewVO">
        SELECT *
        FROM Review
        WHERE user_id = #{userId}
        AND product_id = #{productId}
    </select>

    <!-- 리뷰 ID로 단일 조회 -->
    <select id="findById" resultType="com.roomgenius.furniture_recommendation.entity.ReviewVO">
        SELECT *
        FROM Review
        WHERE review_id = #{reviewId}
    </select>

    <!-- 상품별 리뷰 목록 -->
    <select id="findByProduct" resultType="com.roomgenius.furniture_recommendation.entity.ReviewVO">
        SELECT *
        FROM Review
        WHERE product_id = #{productId}
        ORDER BY created_date DESC
    </select>

</mapper>
